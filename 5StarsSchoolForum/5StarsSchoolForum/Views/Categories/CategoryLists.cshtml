@model IEnumerable<_5StarsSchoolForum.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Yes! This is a list of Categories we have so far!</h2>

<p>
    @Html.ActionLink("New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            @Html.CheckBoxFor(modelItem => item.Checked, new { onclick = "return true" })
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Post Message", "Create", "Messages", new { id = item.Id }, null) |

                @Html.ActionLink("View", "Index", "Messages", new { id = item.Id }, null) |

                @Html.ActionLink("Edit", "Edit", "Categories", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", "Categories", new { id = item.Id })
            </td>
           
        </tr>
    }

</table>

<input id="Submit1" type="submit" value="Add Access" onclick="location.href ='@Url.Action("Assign","Categories")'" />
@Html.ActionLink("Back to List", "Studentlist")