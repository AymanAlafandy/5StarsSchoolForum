@model IEnumerable<_5StarsSchoolForum.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Yes! This is a list of Categories we have so far!</h2>

<p>
    @Html.ActionLink("New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages.PostMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages.PostingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages.Reply.ReplyMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages.Reply.PostingTime)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Messages.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Messages.PostMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Messages.PostingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Messages.Reply.ReplyMessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Messages.Reply.PostingTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        @*<td>
            @Html.CheckBoxFor(modelItem => item.Checked, new { onclick = "return true" })
        </td>*@
    </tr>
}

</table>
